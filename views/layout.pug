doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href="/css/bootstrap.min.css")
    script(src="/js/jquery.min.js")
    script(src="/js/bootstrap.min.js")
    script(src="/js/bs-custom-file-input.min.js")
    script(src="/javascripts/script.js")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header.navbar.navbar-dark.navbar-expand-lg.bg-primary
      a.navbar-brand(href='#') Grocery Inventory
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#toggle-nav')
        span.navbar-toggler-icon
      #toggle-nav.collapse.navbar-collapse
        .navbar-nav
          a.nav-link(href='/' class=(title == 'Grocery Inventory' ? 'active' : '') ) Home
          a.nav-link(href='/categories' class=(title == 'Categories List' ? 'active' : '') ) Categories
          a.nav-link(href='/items' class=(title == 'Items List' ? 'active' : '') ) Items
    .container.mb-5
      .row
        .col
          .page-header= title

          block content
